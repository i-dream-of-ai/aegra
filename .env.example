# Database
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=aegra
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/aegra
DATABASE_ECHO=false

SA_POOL_SIZE=2
SA_MAX_OVERFLOW=0
LG_MIN_POOL_SIZE=1
LG_MAX_POOL_SIZE=6

# Authentication (extensible)
AUTH_TYPE=custom  # custom (default, secure), noop (dev only)

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Logging
LOG_LEVEL=INFO
ENV_MODE=LOCAL # DEVELOPMENT, PRODUCTION, LOCAL (PRODUCTION outputs JSON logs)
LOG_VERBOSITY=standard # standard, verbose (verbose outputs request-id for each request)

# LLM Providers
OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=...
# TOGETHER_API_KEY=...

LANGFUSE_LOGGING=true
LANGFUSE_SECRET_KEY=sk-...
LANGFUSE_PUBLIC_KEY=pk-...
LANGFUSE_HOST=https://cloud.langfuse.com

# QuantConnect (used if USE_SELF_HOSTED_LEAN=false)
QUANTCONNECT_USER_ID=...
QUANTCONNECT_TOKEN=...
QUANTCONNECT_ORGANIZATION_ID=...

# Self-hosted LEAN API (lean-api service)
# These are needed by lean-api to connect to Supabase and Alpha Vantage
DATABASE_URL=postgresql://...  # Supabase connection string
SUPABASE_URL=https://...
SUPABASE_SERVICE_ROLE_KEY=...
ALPHA_VANTAGE_API_KEY=...

# Internal service-to-service auth (shared secret between aegra and lean-api)
INTERNAL_SERVICE_SECRET=your-random-secret-here

# DigitalOcean Spaces (S3-compatible storage for LEAN data cache)
# Create a Space at: https://cloud.digitalocean.com/spaces
# Create API keys at: https://cloud.digitalocean.com/api/tokens (Spaces access keys)
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=your-space-name
DO_SPACES_KEY=your-spaces-access-key
DO_SPACES_SECRET=your-spaces-secret-key
DO_SPACES_PREFIX=lean-data
